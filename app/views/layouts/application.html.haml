!!! 5
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
      
    - if !@current_user
      =button_to 'Sign up/Login', login_path, method: :get, :id => 'signup_login' 
    - else
      You are logged in as #{@current_user.user_id}	
      =button_to 'Log Out', logout_path, method: :delete, :id => 'logout'

    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      = yield
